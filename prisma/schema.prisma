// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}
 
datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model PujoEvent {
  id          Int      @id @default(autoincrement())
  title       String
  images      String[]
  rating      Float
  location    String
  date        DateTime
  time        String
  description String
  crowdLevel  CrowdLevel
  latitude    Float
  longitude   Float
}

enum CrowdLevel {
  Low
  Medium
  High
  VeryHigh
  Extreme
}